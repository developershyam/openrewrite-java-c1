<jxb:bindings version="2.1"
    xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc">

    <!-- Global bindings -->
    <jxb:globalBindings
        generateElementProperty="false"
        underscoreBinding="asWordSeparator"
        collectionType="java.util.List"
        typesafeEnumBase="xs:string"
        enableJavaNamingConventions="true" />

    <!-- Example: Set the package name for generated classes -->
    <jxb:schemaBindings>
        <jxb:package name="com.example.generated"/>
    </jxb:schemaBindings>

</jxb:bindings>